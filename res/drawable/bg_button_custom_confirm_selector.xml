<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        相关属性
        android:state_selected是选中
		android:state_focused是获得焦点
		android:state_pressed是点击
		android:state_enabled是设置是否响应事件,指所有事件
    -->
    <item android:state_pressed="true"><shape>
        	<!-- 填充顏色 -->
            <solid android:color="@color/bg_button_confirm_pressed" />
            <!-- 苗邊 並指定顏色-->
            <stroke android:width="1dp" android:color="@color/bg_button_confirm_edge" />
            <!-- 指定四個角度的弧度 -->
            <corners android:radius="@dimen/corner_buton_radius" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <solid android:color="@color/bg_button_confirm_disabled" />

            <stroke android:width="1dp" android:color="@color/bg_button_confirm_disabled_edge" />

            <corners android:radius="@dimen/corner_buton_radius" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/bg_button_confirm" />

            <stroke android:width="1dp" android:color="@color/bg_button_confirm_edge" />

            <corners android:radius="@dimen/corner_buton_radius" />
        </shape></item>

</selector>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="IviewDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="iviewDialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_left_out</item>
    </style>

    <style name="text_setup_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#99CCFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#BB000000</item>
        <item name="android:textSize">18sp</item>
    </style>
    
 <style name="text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#99CCFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#BB000000</item>
        <item name="android:textSize">18sp</item>
    </style>   
    

    <style name="text_setup_context">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#BB000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_setup_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/bg_btn_confirm_select</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">下一步</item>
        <item name="android:onClick">nextOnclick</item>
    </style>

    <style name="button_setup_previous">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/bg_btn_confirm_select</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">上一步</item>
        <item name="android:onClick">previousOnclick</item>
    </style>

    <style name="button_setup_complete">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/bg_btn_confirm_select</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">設置完成</item>
        <item name="android:onClick">completeOnclick</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:gravity="center_vertical"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/iv_appIcon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_appLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_appSize"
        android:layout_toRightOf="@id/iv_appIcon"
        android:ellipsize="end"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:singleLine="true"
        android:text="Label"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_appInternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_appLabel"
        android:layout_toRightOf="@id/iv_appIcon"
        android:ellipsize="end"
        android:paddingTop="1dp"
        android:singleLine="true"
        android:text="internel"
        android:textColor="#AA000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_appUninstall"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="卸载"
        android:textSize="14sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_appSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_appLabel"
        android:ellipsize="end"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:singleLine="true"
        android:text="155kb"
        android:textColor="#AA000000"
        android:textSize="16sp" />

</RelativeLayout>